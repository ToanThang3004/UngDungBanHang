<Window x:Class="_1760172_1760180.ThemSL"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1760172_1760180"
        mc:Ignorable="d"
        Title="ThemSL" Height="130" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Nhập số lượng" FontSize="15" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="tbxSoLuong" Width="200" Height="30" FontSize="15" VerticalContentAlignment="Center"/>
        </StackPanel>
        <Button x:Name="btnLuu" Grid.Row="1" Content="Cập nhật" Width="150" Height="30" Background="SeaGreen" FontSize="15" Foreground="white"
                Click="btnLuu_Click"/>
    </Grid>
</Window>
