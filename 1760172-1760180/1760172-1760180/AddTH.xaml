<Window x:Class="_1760172_1760180.AddTH"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1760172_1760180"
        mc:Ignorable="d"
        Title="Thêm thương hiệu" Height="140" Width="500">
    <Grid Background="#E6F4F5">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"></RowDefinition>
            <RowDefinition Height="50"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="0">
            <TextBlock Text="Tên thương hiệu" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,20,0" FontSize="15"/>
            <TextBox x:Name="tbxTenTH" Width="300" Height="30" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="15"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center" Grid.Row="1">
            <Button x:Name="btnThem" Content="Thêm" Width="100" Height="30" FontSize="15" Background="SeaGreen" Foreground="White" Click="btnThem_Click"/>
        </StackPanel>
    </Grid>
</Window>
